@model dormitory.Floor

@{
    ViewData["Title"] = "Create";
}

<h1>Додавання поверху до гуртожитку @ViewBag.NameDormitory</h1>

<h4>Floor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumberFlor" class="control-label"></label>
                <input asp-for="NumberFlor" class="form-control" />
                <span asp-validation-for="NumberFlor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Info" class="control-label"></label>
                <input asp-for="Info" class="form-control" />
                <span asp-validation-for="Info" class="text-danger"></span>
            </div>

            <input type="hidden" value="@ViewBag.NameDormitory" name="NameDormitory">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p>
    @Html.ActionLink("Повернутись назад","Index",new{NameDormitory=ViewBag.NameDormitory})
</p>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
